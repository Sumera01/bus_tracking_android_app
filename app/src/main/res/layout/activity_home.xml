<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar at the Top -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FF9800"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:title="@string/app_name"
            android:titleTextColor="#000000"
            android:titleTextAppearance="@style/Toolbar.TitleText"/>

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"/>

        <!-- Card Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Row 1: Track Bus and Attendance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Track Bus Card -->
                <LinearLayout
                    android:id="@+id/layoutTrackBus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:padding="12dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="onTrackBusClick">

                    <ImageView
                        android:layout_width="153dp"
                        android:layout_height="147dp"
                        android:contentDescription="@string/track_bus"
                        android:scaleType="fitCenter"
                        android:src="@drawable/track"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/track_bus"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Attendance Card -->
                <LinearLayout
                    android:id="@+id/layoutAttendance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:padding="12dp"
                    android:layout_marginStart="16dp"
                    android:onClick="onAttendanceClick">

                    <ImageView
                        android:layout_width="136dp"
                        android:layout_height="143dp"
                        android:contentDescription="@string/attendance"
                        android:scaleType="fitCenter"
                        android:src="@drawable/att"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/attendance"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2: SOS and Notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- SOS Card -->
                <LinearLayout
                    android:id="@+id/layoutSOS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:padding="12dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="onSOSClick">

                    <ImageView
                        android:layout_width="131dp"
                        android:layout_height="137dp"
                        android:contentDescription="@string/sos"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sos"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Notification Card -->
                <LinearLayout
                    android:id="@+id/layoutNotification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:padding="12dp"
                    android:layout_marginStart="16dp"
                    android:onClick="onNotificationClick">

                    <ImageView
                        android:layout_width="129dp"
                        android:layout_height="133dp"
                        android:contentDescription="@string/notification"
                        android:scaleType="fitCenter"
                        android:src="@drawable/notifi"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notification"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>